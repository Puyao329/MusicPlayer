<!--        android:id="@+id/btnPlay_or_pause"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="@string/pause"/>-->
    </LinearLayout>
</LinearLayout>